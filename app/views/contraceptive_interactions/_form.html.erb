<%= simple_form_for(@contraceptive_interaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <!-- <%= f.input :generic_id, label: 'Generic Name', error: 'Please select a Generic Name' %> -->
    <%= f.input :generic_id, label: 'Generic', error: 'Please select a generic' do%>
      <%= f.select :generic_id, Generic.all.map { |r| [r.generic_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <%= f.input :contraceptive_interaction_text, label: 'Interactions', error: 'Please enter the interaction details' %>
    <!-- <%= f.input :data_source_id, label: 'Source of Data', error: 'Please select a data source' %> -->
    <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
      <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <!-- <%= f.input :status, label: 'Active Status', error: 'Active Status is auto populated' %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
