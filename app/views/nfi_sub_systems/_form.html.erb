<%= simple_form_for(@nfi_sub_system) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sub_system_description , error: "sub_system_description is mandatory"%>
    <%= f.input :system_id , error: "system_id is mandatory"%>
    <%= f.input :data_source_id , error: "data_source_id is mandatory"%>
    <%= f.input :status , error: "status is mandatory"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
