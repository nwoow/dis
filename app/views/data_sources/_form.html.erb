<%= simple_form_for(@data_source) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :data_source_name, label: 'Data Source', error: 'Please enter a data source' %>
    <!-- <%= f.input :status, label: 'Active Status', error: 'Active Status is auto populated' %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
