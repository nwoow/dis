<%= simple_form_for(@nfi_system) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :system_name , error: "system_name is mandatory"%>
    <%= f.input :sysem_description , error: "sysem_description is mandatory"%>
    <%= f.input :data_source_id , error: "data_source_id is mandatory"%>
    <%= f.input :sub_system_exist , error: "sub_system_exist is mandatory"%>
    <%= f.input :status , error: "status is mandatory"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
