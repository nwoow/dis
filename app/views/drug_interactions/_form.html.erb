<%= simple_form_for(@drug_interaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_generic_id, error: 'Please select a data source' do %>
      <%= f.select :first_generic_id, Generic.all.map { |r| [r.generic_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <%= f.input :second_generic_id, error: 'Please select a data source' do %>
      <%= f.select :second_generic_id, Generic.all.map { |r| [r.generic_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <%= f.input :drug_interaction_text , error: 'drug_interaction_text is mandatory, please specify one'%>
    <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
      <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <!-- <%= f.input :status , error: 'status is mandatory, please specify one'%> -->

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
