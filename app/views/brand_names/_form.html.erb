<%= simple_form_for @brand_name do |f| %>
  <%= f.input :brand_name , label: 'Brand Name', error: 'Please enter a brand name'%>
  <%= f.input :generic_id, label: 'Generic', error: 'Please select a generic' do%>
    <%= f.select :generic_id, Generic.all.map { |r| [r.generic_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
  <% end %>
  <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
    <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
  <% end %>

