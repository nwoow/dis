<p id="notice"><%= notice %></p>

<h1>Dose Forms</h1>

<table id="example" class="table table-bordered table-hover table-striped datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Doseform</th>
      <th>Abbreviation</th>
      <th>Data Source</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @dose_forms.each do |dose_form| %>
      <tr>
        <td><%= dose_form.doseform_name %></td>
        <td><%= dose_form.doseform_abbr %></td>
        <td><%= DataSource.where("id=?", dose_form.data_source_id).pluck(:data_source_name).first%></td>
        <td><%= dose_form.status %></td>
        <td><%= link_to 'Show', dose_form %>,<%= link_to 'Edit', edit_dose_form_path(dose_form) %>,<%= link_to 'Destroy', dose_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

