<%= simple_form_for(@dose_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :doseform_name,label: 'Deseform Name', error: 'Please enter a doseform name' %>
    <%= f.input :doseform_abbr,label: 'Abbreviation', error: 'Please enter a deseform name abbreviation' %>
    <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
      <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <!-- <%= f.input :status %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
