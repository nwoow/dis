<p id="notice"><%= notice %></p>

<h1>Hepatic Impairments</h1>

<table id="example" class="table table-bordered table-hover table-striped datatable" cellspacing="0" width="100%">
  <thead>
    <tr>

      <th>Generic</th>
      <th>Instructions</th>
      <th>Hepatic impairment text</th>
      <th>Data Source </th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hepatic_impairments.each do |hepatic_impairment| %>
      <tr>

        <td><%= Generic.where("id = ?", hepatic_impairment.generic_id).pluck(:generic_name).first %></td>
        <td><%= hepatic_impairment.hepatic_imp_instructions %></td>
        <td><%= hepatic_impairment.hepatic_imp_text %></td>
        <td><%= DataSource.where("id = ?", hepatic_impairment.data_source_id).pluck(:data_source_name).first %></td>
        <td><%= hepatic_impairment.status %></td>
        <td><%= link_to 'Show', hepatic_impairment %></td>
        <td><%= link_to 'Edit', edit_hepatic_impairment_path(hepatic_impairment) %></td>
        <td><%= link_to 'Destroy', hepatic_impairment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

