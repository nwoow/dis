<p id="notice"><%= notice %></p>

<h1>Doseform Doseunits Map</h1>

<table id="example" class="table table-bordered table-hover table-striped datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <!-- <th>id</th> -->
      <th>Doseform</th>
      <th>Doseunit</th>
      <th>Is default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doseform_doseunits.each do |doseform_doseunit| %>
      <tr>
        <!-- <td><%= doseform_doseunit.id %></td> -->
        <td><%= DoseForm.where("id = ?", doseform_doseunit.doseform_id).pluck(:doseform_name).first %></td>
        <td><%= Doseunit.where("id = ?", doseform_doseunit.doseunit_id).pluck(:doseunit_abbr).first %></td>
        <td><%= doseform_doseunit.is_default %></td>
        <td><%= link_to 'Show', doseform_doseunit %></td>
        <td><%= link_to 'Edit', edit_doseform_doseunit_path(doseform_doseunit) %></td>
        <td><%= link_to 'Destroy', doseform_doseunit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

