<%= simple_form_for @additive_frequency do |f| %>
  <%= f.input :display_text, label: 'Display Text', error: 'Please enter the text to display'%>
  <%= f.input :description, label: 'Description', error: 'Please enter the description'  %>

  <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
    <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
  <% end %>
  <!-- <%= f.input :status , label: 'Active Status', error: 'This is an auto populated field'  %> -->

  <%= f.button :submit, "Save" %>
<% end %>
