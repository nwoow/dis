<%= simple_form_for(@dispensible_combination) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <!-- <%= f.input :generic_id, label: 'Combination Generic', error: 'Please select a combination generic' %> -->
    <%= f.input :generic_id, label: 'Generic', error: 'Please select a generic' do%>
      <%= f.select :generic_id, Generic.all.map { |r| [r.generic_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <%= f.input :doseform_id, label: 'Dose Form', error: 'Please select a dose form' do%>
      <%= f.select :doseform_id, DoseForm.all.map { |r| [r.doseform_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <%= f.input :route_id, label: 'Route', error: 'Please select a route' do %>
      <%= f.select :route_id, Route.all.map { |r| [r.route_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <%= f.input :dispensible_combination_text, label: 'Dispensible Combination', error: 'This is to be auto populated' %>
    <!-- <%= f.input :data_source_id, label: 'Data Source', error: 'Please enter a data source' %> -->
    <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
      <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <!-- <%= f.input :status, label: 'Active Status', error: 'This is to be auto populated' %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
