<p id="notice"><%= notice %></p>

<h1>Package Types</h1>

<table id="example" class="table table-bordered table-hover table-striped datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Package type name</th>
      <th>Data source data source</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @package_types.each do |package_type| %>
      <tr>
        <td><%= package_type.package_type_name %></td>
        <td><%= package_type.data_source_data_source_id %></td>
        <td><%= package_type.status %></td>
        <td><%= link_to 'Show', package_type %></td>
        <td><%= link_to 'Edit', edit_package_type_path(package_type) %></td>
        <td><%= link_to 'Destroy', package_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

