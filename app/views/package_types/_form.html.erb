<%= simple_form_for(@package_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :package_type_name , error: "package_type_name is mandatory"%>
    <%= f.input :data_source_id , error: "data_source_id is mandatory"%>
    <%= f.input :status , error: "status is mandatory"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
