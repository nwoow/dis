<%= simple_form_for(@dose_period) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dose_period_name, label: 'Dose Period', error: 'Please enter a dose period' %>
    <%= f.input :dose_period_abbr, label: 'Abbreviation', error: 'Please enter a short name' %>
    <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
      <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <!-- <%= f.input :status, label: 'Active Status', error: 'This is auto populated' %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
