
<%= simple_form_for @alcohol_interaction do |f| %>

  <!-- <%= f.input :generic_id , label: 'Generic', error: 'Please select a generic'%> -->

  <!--Start for slectable js input it is also searchable  -->
  <%= f.input :generic_id, label: 'Generic', error: 'Please select a generic' do %>
    <%= f.select :generic_id, Generic.all.map { |r| [r.generic_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
  <% end %>
  <!--End for slectable js input it is also searchable  -->

  <%= f.input :alcohol_interaction_type_id, label: 'Interaction Type', error: 'Please select a interaction type' do %>
          <%= f.select :alcohol_interaction_type_id, AlcoholInteractionType.all.map { |r| [r.alcohol_interaction_type_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
  <% end %>
  <!-- <%= f.input :status , label: 'Active Status', error: 'This is to be auto created'  %> -->
  <!--Start for slectable js input it is also searchable  -->
  <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
    <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
  <% end %>
  <!--End for slectable js input it is also searchable  -->
  <%= f.button :submit, "Save" %>
<% end %>
<script type="text/javascript">
$(".js-example-basic-multiple").select2();
</script>
