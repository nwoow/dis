<%= simple_form_for(@generic_monograph) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :generic_id, error: 'Please select a data source' do %>
      <%= f.select :generic_id, Generic.all.map { |r| [r.generic_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <%= f.input :dose_monograph, label: "Dose Monograph", error: "dose_monograph is mandatory" %>
    <%= f.input :contraindication_monograph, label: "Contra Indications" , error: "contraindication_monograph is mandatory"%>
    <%= f.input :precaution_monograph, label: "Precautions", Error: "Please enter precaution" %>
    <%= f.input :adverseeffect_monograph, label: "Adverse Effects", error: "adverseeffect_monograph is mandatory" %>
    <%= f.input :storage_monograph , label: "Storage", error: "storage_monograph is mandatory"%>
    <%= f.input :data_source_id, label: 'Data Source', error: 'Please select a data source' do %>
      <%= f.select :data_source_id, DataSource.all.map { |r| [r.data_source_name, r.id, { class: "form-control" }] }, {include_blank: true},{:class => 'form-control js-example-basic-multiple'} %>
    <% end %>
    <!-- <%= f.input :status, error: "status is mandatory" %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
