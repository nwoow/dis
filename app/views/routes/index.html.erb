<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table id="example" class="table table-bordered table-hover table-striped datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Route Name</th>
      <th>Abbreviation</th>
      <th>Description</th>
      <th>Data Source </th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.route_name %></td>
        <td><%= route.route_abbr %></td>
        <td><%= route.route_description %></td>
        <td><%= DataSource.where("id=?", route.data_source_id).pluck(:data_source_name).first%></td>
        <td><%= route.status %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

